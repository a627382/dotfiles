[core]
    editor  = vim
[user]
    name    = Edward Dalton
    email   = edward.dalton@worldline.com
[color]
    diff    = auto
    status  = auto
    branch  = auto
    ui      = true
[alias]
    st      = status -sb
    co      = checkout
    lol     = log --graph --decorate --pretty=oneline --abbrev-commit
    lola    = log --graph --decorate --pretty=oneline --abbrev-commit --all
[push]
	default = matching
